<assembly>
	<id>distribution</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
				<include>*.sources.jar</include>
				<include>*.javadoc.jar</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assemble</directory>
			<includes>
				<include>*.sh</include>
				<include>README</include>
			</includes>
			<filtered>true</filtered>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
        <dependencySets>
                <dependencySet>
                        <outputDirectory>/</outputDirectory>
                        <unpack>false</unpack>
                        <scope>compile</scope>
                </dependencySet>
                <dependencySet>
                        <outputDirectory>/</outputDirectory>
                        <unpack>false</unpack>
                        <scope>provided</scope>
                </dependencySet>
        </dependencySets>

</assembly>
